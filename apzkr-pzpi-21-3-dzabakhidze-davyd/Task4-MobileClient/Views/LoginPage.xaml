<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CareWatch.Mobile.Views.LoginPage"
>

    <Grid RowDefinitions="Auto, *" Margin="20">
        <VerticalStackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="Center">
            <Image Source="brushfill.png" HeightRequest="80" HorizontalOptions="Center" />
            <Label Text="Login"
                   FontSize="40"
                   FontAttributes="Bold"
                   TextColor="{StaticResource Primary}"
                   HorizontalOptions="Center" />

            <Entry x:Name="Email" Placeholder="Email" FontSize="18" Margin="0,10,0,0" HorizontalOptions="FillAndExpand" />
            <Entry x:Name="Password" Placeholder="Password" IsPassword="True" FontSize="18" Margin="0,10,0,0" HorizontalOptions="FillAndExpand" />

            <Button x:Name="LoginButton"
                    Clicked="LoginButton_Clicked"
                    Text="Login"
                    VerticalOptions="CenterAndExpand"
                    HorizontalOptions="FillAndExpand"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="White"
                    Margin="0,20,0,0" />
        </VerticalStackLayout>
    </Grid>
</ContentPage>
